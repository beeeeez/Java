
package week2inclas;



import java.util.Scanner;
public class rockypaper {

	public enum stuff {dead, rock, paper, scissors};
	
	public static void main(String[] args) {
	Scanner keyboard = new Scanner(System.in);
	boolean dooped = true;
	
	int tums = (int)Math.random() * 4+1;
	System.out.println("enter rock paper or scissors : ");
	String fudge = keyboard.nextLine();
	


	
	if(stuff.values()[tums].toString() == fudge) {
		System.out.println("its a tie");
	}
	else{
		System.out.println("computer picked: "+stuff.values()[tums].toString());
		switch (stuff.values()[tums].toString()) {
		case "rock":
			if(fudge == "paper") {
				System.out.println("you win");
			}
			else {
				System.out.println("you lose");
			}
			break;
		case "paper":
			if(fudge == "scissors") {
				System.out.println("you win");
			}
			else {
				System.out.println("you lose");
			}
			break;
		
		case "scissors":
		if(fudge == "rock") {
			System.out.println("you win");
		}
		else {
			System.out.println("you lose");
		}
		break;
		default:
			System.out.println("wat");
			break;
		}
	}

		System.exit(0);
	
	
	
	
	}
}

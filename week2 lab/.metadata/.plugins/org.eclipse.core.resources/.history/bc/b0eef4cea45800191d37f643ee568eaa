	}
	
	private static String flubbybubby(List<Integer> intList) {
		int hold = 0;
		
		for(int jimmy: intList){
			if (hold<jimmy) {
				hold=jimmy;
			}
		}
		return String.valueOf(hold);
	
	}
	
